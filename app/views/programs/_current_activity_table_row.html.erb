<tr>
  <td><%= link_to activity.name, 
        new_translation_activity_translation_stage_path(activity), 
        {class: 'h4', remote: true} %>
  </td>
  <td class="progress-cell" id="activity-progress-<%= activity.id %>">
    <%= render 'progress_bar', activity: activity %>
  </td>
  <td id="activity-stage-name-<%= activity.id %>"><%= activity.stage_name %></td>
  <td><%= goal %></td>
  <td><%= person %></td>
</tr>
<tr>
  <td colspan="6" class="update-stage-form" id="update-stage-form-cell-<%= activity.id %>">
    <div class="row" id="update-stage-form-<%= activity.id %>"></div>
  </td>
</tr>