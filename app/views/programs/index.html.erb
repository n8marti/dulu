<h1><%= t :Programs %></h1>

<table class="table">
  <tr>
    <th><%= t :Language %></th>
    <th></th>
  </tr>
  <% @programs.each do |program| %>
    <tr>
      <td><%= link_to program.name, dashboard_program_path(program) %></td>
      <td>
        <% program.sorted_activities.each do |activity| %>
          <%= "#{activity.name}[#{t(activity.stage_name)}]" %>
            <%= ', ' unless activity==program.sorted_activities.last %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>