<%= render layout: 'sidebar' do %>
  <div class="row">
    <div class="col-md-6">
      <h3><%= t :activities %></h3>
      <%= link_to t(:Add_books),
                  new_program_translation_activity_path(@program) %>

      <table class='table'>
        <% @program.translation_activities.order(:bible_book_id).each do |activity| %>
          <tr>
            <td><%= link_to activity.name, activity %></td>
            <td><%= t(activity.current_stage.name) %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="col-md-6">
      <h3><%= t :people %></h3>

      <% if @program.participants.empty? %>
          <%= link_to t(:Add_person), new_program_participant_path(@program) %>
      <% else %>
          <%= link_to t(:Manage), program_participants_path(@program) %>
      <% end %>

      <table class="table">
        <% @program.current_participants.each do |relation| %>
          <tr>
            <td><%= relation.person.full_name %></td>
            <td><%= t(relation.program_role.name) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end %>