<%= render layout: 'sidebar' do %>
  <div class="row">
    <div class="col-md-6">
      <h3><%= t :activities %></h3>
      <%= link_to t(:Add_books),
                  new_program_translation_activity_path(@program) %>

      <table class='table'>
        <% @program.translation_activities.order(:bible_book_id).each do |activity| %>
          <tr>
            <td><%= activity.bible_book.name %></td>
            <td><%= t(activity.current_translation_stage.name) %></td>
            <td><%= link_to t(:Update),
                      new_translation_activity_translation_stage_path(activity),
                      class: "btn btn-default btn-xs" %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="col-md-6">
      <h3><%= t :people %></h3>
      <%= link_to t(:add_person), new_program_pers_prog_rel_path(@program) %>
      <table class="table">
        <% @program.pers_prog_rels.each do |relation| %>
          <tr>
            <td><%= relation.person.full_name %></td>
            <td><%= t(relation.program_role.name) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end %>