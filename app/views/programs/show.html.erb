<%= render layout: 'sidebar' do %>
  <div class="row">
    <div class="col-md-6">
      <h3><%= t :activities %></h3>
      <%= link_to t(:Add_books),
                  new_program_translation_activity_path(@program) %>

      <table class='table'>
        <% @program.translation_activities.order(:bible_book_id).each do |activity| %>
          <tr>
            <td><%= link_to activity.name, activity %></td>
            <td><%= t(activity.current_stage.name) %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="col-md-6">
      <h3><%= t :people %></h3>

      <% if @program.pers_prog_rels.empty? %>
          <%= link_to t(:Add_person), new_program_pers_prog_rel_path(@program) %>
      <% else %>
          <%= link_to t(:Manage), program_pers_prog_rels_path(@program) %>
      <% end %>

      <table class="table">
        <% @program.current_pers_prog_rels.each do |relation| %>
          <tr>
            <td><%= relation.person.full_name %></td>
            <td><%= t(relation.program_role.name) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end %>