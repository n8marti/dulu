<!-- required inputs: form, prefix (normally the name of the fdate field), fdate -->
<% fdate ||= nil %>
<% if [:en].include?(I18n.locale) %>
  <%= form.text_field "#{prefix}_m", {value: fdate.try(:month), size: 2, maxlength: 2, class: "fuzzy-field form-control", placeholder: t(:MM)} %>
  /
  <%= form.text_field "#{prefix}_d", {value: fdate.try(:day), size: 2, maxlength: 2, class: "fuzzy-field form-control", placeholder: t(:DD)} %>
  /
  <%= form.text_field "#{prefix}_y", {value: fdate.try(:year), size: 4, maxlength: 4, class: "fuzzy-field form-control", placeholder: t(:YYYY)} %>

<% else %>
  <%= form.text_field "#{prefix}_d", {value: fdate.try(:day), size: 2, maxlength: 2, class: "fuzzy-field form-control", placeholder: t(:DD)} %>
  /
  <%= form.text_field "#{prefix}_m", {value: fdate.try(:month), size: 2, maxlength: 2, class: "fuzzy-field form-control", placeholder: t(:MM)} %>
  /
  <%= form.text_field "#{prefix}_y", {value: fdate.try(:year), size: 4, maxlength: 4, class: "fuzzy-field form-control", placeholder: t(:YYYY)} %>

<% end %>
<%= t :Fdate_omit %>