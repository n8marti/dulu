<% activities = program.activities.count %>
<% people = program.current_people.count %>
<% events = program.events.count %>

<% unless activities == 0 %>
  <%= activities %>
  <%= link_to t('Activity'.pluralize(activities)), program %>
  <%= '|' unless people == 0 and events == 0 %>
<% end %>

<% unless people == 0 %>
  <%= people %>
  <%= link_to t('Person'.pluralize( people)), program_participants_path(program) %>
  <%= '|' unless events == 0 %>
<% end %>

<% unless events == 0 %>
  <%= events %>
  <%= link_to t('Event'.pluralize(events)), program_events_path(program) %>
<% end %>