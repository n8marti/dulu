<%= render 'shared/error_messages', errors: @organization.errors %>

<%= form_for @organization do |f| %>
  <p>
    <%= f.label :name, t(:Name) %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :abbreviation, t(:Abbreviation) %>
    <%= f.text_field :abbreviation %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>