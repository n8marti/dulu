<td class="h4" id="stage-name-<%= stage.id %>">
  <%= t stage.name %>
</td>

<td id="stage-date-<%= stage.id %>">
  <%= stage.f_start_date.try(:pretty_print) %>
</td>

<% if can? :update, stage.activity %>
  <td>
    <%= button_tag t(:Edit), class: 'btn btn-warning btn-sm',
                      data: {'edit-stage-id' => stage.id}  %>
  </td>

  <td>
      <%= button_to 'X', stage_path(stage),
            method: :delete, remote: true, class: 'btn btn-danger btn-sm',
            data: { confirm: t(:Delete_stage_confirmation)}  %>
  </td>
<% end %>