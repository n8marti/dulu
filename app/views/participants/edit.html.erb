<% if @cluster_program.is_a? Program %>

  <% @program = @cluster_program %>
    <%= render layout: 'programs/sidebar' do %>
      <h2><%= @participant.person.full_name %></h2>
      <%= render 'edit' %>
    <% end %>

<% else %>

  <% @cluster = @cluster_program %>
  <h2><%= t :Cluster_x, name: @cluster.name %></h2>
  <h3><%= @participant.person.full_name %></h3>
  <%= render 'edit' %>

<% end %>