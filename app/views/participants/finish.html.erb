<%= render layout: 'programs/sidebar' do %>

    <h3><%= t :End_of_participation %></h3>

    <%= form_for @participant, url: participant_path, method: :patch do |form| %>

     <p>
       <%= form.label :end_date, "#{@participant.full_name} #{t(:End_of_participation_prompt)}" %><br>
       <%= render 'layouts/fuzzy_date_field', form: form, prefix: :end_date, fdate: FuzzyDate.today %>
     </p>

      <p>
        <%= form.submit t(:Save) %>
      </p>

    <% end %>

<% end %>