<%= render 'shared/error_messages', errors: @publication.errors %>

<div class="form-group">
  <%= form.label :kind, t(:Type_of_publication) %>
  <%= form.select(:kind,
                  options_for_select(Publication.kinds.collect{ |k| [t(k), k]}),
                  {},
                  class: 'form-control') %>
</div>

<div class="form-group">
  <%= form.label :english_name, t(:English_title) %>
  <%= form.text_field :english_name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :french_name, t(:French_title) %>
  <%= form.text_field :french_name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :nl_name, "#{@program.name} #{t(:Title)}" %>
  <%= form.text_field :nl_name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :year, t(:Publication_year) %>
  <%= form.text_field :year, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.submit(t(:Save), class: 'btn btn-primary btn-lg') %>
</div>