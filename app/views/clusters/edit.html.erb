<h2><%= t :Cluster_x, name: @cluster.name %></h2>

<%= form_tag cluster_path(@cluster), method: :put, class: 'auto-width' do %>

  <div class="form-group">
    <label><%= t :Add_language %></label>
    <%= select_tag 'cluster[language_id]', options_from_collection_for_select(Language.where('cluster_id IS NULL or cluster_id != ?', @cluster.id), :id, :name), {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= submit_tag t(:Save), class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>