<h2><%= t :Enter_cluster %></h2>

<%= form_for @cluster, html: {class: 'auto-width'} do |form| %>

  <div class="form-group">
    <%= form.label :name, t(:Name) %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit t(:Save) %>
  </div>

<% end %>