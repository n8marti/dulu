 <% stage = activity.next_stage %>
 
  <%= form_for(stage,
               url: activity_stages_path(activity),
               remote: true) do |f| %>
    <div class="col-md-3">
      <p>
        <%= f.label :name, t(:Update_stage) %>
        <%= f.select(:name, t_select_options(activity.available_stages, stage.name), {}, class: 'form-control') %>
      </p>
    </div>
    <div class="col-md-5">
      <p>
        <%= f.label :start_date, t(:As_of), style: "display: block;" %>
        <%= render 'shared/fuzzy_date_field',
                   model: 'stage', field: 'start_date',
                   horizontal_form: true %>
      </p>
    </div>
    <div class="col-md-2 submit-form">
      <label>&nbsp;</label><br /> <!-- Can somebody PLEASE tell me a better way to get the submit button to line up with the controls? -->
      <%= f.submit t(:Save), class: 'btn btn-primary' %>
    </div>
    <div class="col-md-2">
     <label>&nbsp;</label><br /> <!-- Can somebody PLEASE tell me a better way to get the submit button to line up with the controls? -->
     <%= button_tag t(:Cancel), class: 'btn btn-danger', data: {'form-cancel-id'=>activity.id} %>
    </div>
  <% end %>