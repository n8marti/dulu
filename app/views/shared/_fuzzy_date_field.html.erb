<!-- required input: model, field -->
<!-- optional input: fdate -->
<%
  fdate ||= nil
  fields = {}
  months = t('date.abbr_month_names')
  months_options = months[1..12].map{|name| [name, months.index(name)]}
  days_options = (1..31).to_a
  fields[:year] = text_field_tag("#{model}[#{field}_y]",
                                 fdate.try(:year),
                                 {size: 4, maxlength: 4, class: 'fuzzy-field form-control', placeholder: t(:Year)})
  fields[:month] = select_tag("#{model}[#{field}_m]",
                              options_for_select(months_options, fdate.try(:month)),
                              {include_blank: t(:Month), class: 'fuzzy-field form-control'})
  fields[:day] = select_tag("#{model}[#{field}_d]",
                            options_for_select(days_options, fdate.try(:day)),
                            {include_blank: t(:Day), class: 'fuzzy-field form-control'})
%>
<% if [:en].include?(I18n.locale) %>
  <span class="fd-month">
    <%= fields[:month] %>
  </span>
  <span class="fd-day">
    <%= fields[:day] %>
  </span>
<% else %>
  <span class="fd-day">
    <%= fields[:day] %>
  </span>
  <span class="fd-month">
    <%= fields[:month] %>
  </span>
<% end %>
<span class="fd-year">
  <%= fields[:year] %>
</span>
<%= t :Fdate_omit %>