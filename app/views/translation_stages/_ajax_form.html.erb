 <% @translation_activity = activity %>
 <% @translation_stage = TranslationStage.new_for(activity) %>
 
  <%= form_for(@translation_stage, 
        url: translation_activity_translation_stages_path(@translation_activity),
        remote: true) do |f| %>
    <div class="col-md-6">
      <p>
        <%= f.label :stage_name, t(:Update_stage) %>
        <%= f.collection_select(:stage_name_id, StageName.all.order(:id),
              :id, :translated_name, {}, class: 'form-control') %>
      </p>
    </div>
    <div class="col-md-4">
      <p>
        <%= f.label :start_date, t(:As_of) %>
        <%= f.date_field :start_date, class: 'form-control' %>
      </p>
    </div>
    <div class="col-md-2 submit-form">
      <label>&nbsp;</label><br /> <!-- Can somebody PLEASE tell me a better way to get the submit button to line up with the controls? -->
      <%= f.submit t(:Save), remote: true, class: 'btn btn-default' %>
    </div>
  <% end %>