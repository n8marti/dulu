<%=
  # Locals: notification

  i18n_vars = {}
  
  notification.t_vars.each do |key, text|
    i18n_vars[key] = notification.links[key] ?
                        link_to(text, notification.links[key]) :
                        text
  end

  t("notification.#{notification.kind}", i18n_vars).html_safe

%>