<div class="row">
  <div class="col-md-9">

    <h2><%= t :My_activities %></h2>

    <% @user.current_pers_prog_rels.each do |pers_prog_rel| %>
      <div class="panel panel-primary">

        <div class="panel-heading">
          <h3 class="panel-title">
            <%= link_to pers_prog_rel.program.name, pers_prog_rel.program %>
          </h3>
        </div>

        <div class="panel-body">
          <% activities = pers_prog_rel.activities.empty? ?
                              pers_prog_rel.program.sorted_activities : pers_prog_rel.sorted_activities %>
          <table class="table" id="activities-table">

          <% activities.each do |activity| %>
            <%= render 'programs/current_activity_table_row', activity: activity %>
          <% end %>

          </table>
        </div>

      </div>
    <% end %>

  </div>
</div>