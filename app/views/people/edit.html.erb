<h1>Edit Person</h1>

<%= form_for :person, url: person_path(@person), method: :patch  do |f| %>
    
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>
  
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>