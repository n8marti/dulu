<h1><%= t :People %></h1>
<p>
  <%= link_to t(:Add_person), new_person_path, class: "btn btn-primary" %>
</p>
<table class="table">
  <tr>
    <th><%= t :Name %></th>
    <th><%= t :Organization %></th>
    <th><%= t :Email %></th>
    <th><%= t :Can_log_in %></th>
    <th> </th> <!-- Column for Edit button-->
  </tr>
  <% @people.each do |person| %>
    <tr>
      <td><%= person.last_name %>, <%= person.first_name %></td>
      <td><%= person.organization.name if person.organization %></td>
      <td><%= person.email %></td>
      <td><%= person.has_login ? t(:Oui) : t(:Non) %></td>
      <td><%= link_to t(:Edit), edit_person_path(person), 
              class: "btn btn-default btn-xs" %></td>
    </tr>
  <% end %>
</table>