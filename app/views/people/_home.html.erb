<div class="row">
  <% events_hash = Event.events_as_hash %>
  <div class="col-md-6">
    <h3>
      <%= t :Current_events %>
    </h3>
    <%= render 'event_row', events: events_hash[:current] %>
  </div>

  <div class="col-md-6">
    <h3>
      <%= t :Upcoming_events %>
      <% if can? :create, Event %>
          <small>
            <%= link_to t(:Add_event), new_event_path %>
          </small>
      <% end %>
    </h3>
    <%= render 'event_row', events: events_hash[:future] %>
  </div>
</div>

<div>
  <h3><%= t :Right_now %></h3>

  <% stats = Statistic.stats_for(:home) %>

  <table class="table">
    <% stats.each do |stat| %>
      <tr>
        <td class="bigger"><%= stat.number %></td>
        <td>
          <%= stat.title %>
        </td>
        <td>
          <%= link_to t(:See_all), stat.path unless stat.path.blank? %>
        </td>
      </tr>
    <% end %>
  </table>
</div>