{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": false,
    "lib": ["es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": true,
    "target": "es3",
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": true
}
